func TestGraphBuilder_DetectChanges(t *testing.T) {
	t.Run("generation increases with spec change - configChanged=true", func(t *testing.T) {
		// Previous resource with generation 1 and different image
		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(1),
			},
			"spec": map[string]interface{}{
				"containers": []interface{}{
					map[string]interface{}{
						"image": "nginx:1.19",
					},
				},
			},
		}

		// Current resource with generation 2 and different image
		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(2),
			},
			"spec": map[string]interface{}{
				"containers": []interface{}{
					map[string]interface{}{
						"image": "nginx:1.20",
					},
				},
			},
			"status": map[string]interface{}{
				"phase": "Running",
			},
		}

		// Create ResourceData
		currentJSON, _ := json.Marshal(currentResource)
		currentData, _ := analyzer.ParseResourceData(currentJSON)

		// Mock the query to return previous resource
		mockClient := &mockGraphClientWithQuery{
			queryResult: createMockQueryResult(previousResource),
		}
		builder := NewGraphBuilderWithClient(mockClient).(*graphBuilder)

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
			Data:     currentJSON,
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(event, currentData)

		assert.True(t, configChanged, "configChanged should be true when generation increases and spec changes")
		assert.True(t, statusChanged, "statusChanged should be true when status exists")
		assert.False(t, replicasChanged)
	})

	t.Run("generation increases but spec unchanged (only metadata changed) - configChanged=false", func(t *testing.T) {
		// Previous resource with generation 835 but SAME spec
		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(836),
				"annotations": map[string]interface{}{
					"deployment.kubernetes.io/revision": "839",
				},
			},
			"spec": map[string]interface{}{
				"replicas": float64(0),
				"template": map[string]interface{}{
					"metadata": map[string]interface{}{
						"labels": map[string]interface{}{
							"app": "external-secrets",
						},
					},
				},
			},
			"status": map[string]interface{}{
				"observedGeneration": float64(836),
			},
		}

		// Previous resource with generation 835 but SAME spec
		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(835),
				"annotations": map[string]interface{}{
					"deployment.kubernetes.io/revision": "838",
				},
			},
			"spec": map[string]interface{}{
				"replicas": float64(0),
				"template": map[string]interface{}{
					"metadata": map[string]interface{}{
						"labels": map[string]interface{}{
							"app": "external-secrets",
						},
					},
				},
			},
			"status": map[string]interface{}{
				"observedGeneration": float64(835),
			},
		}

		mockClient := &mockGraphClient{
			queryResult: createMockQueryResult(previousResource),
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.False(t, configChanged, "configChanged should be false when only metadata changed (spec identical)")
		assert.True(t, statusChanged)
		assert.False(t, replicasChanged)
	})

	t.Run("generation unchanged - configChanged=false", func(t *testing.T) {
		builder := NewGraphBuilder().(*graphBuilder)

		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(5),
			},
			"spec": map[string]interface{}{
				"replicas": float64(3),
			},
		}

		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(5),
			},
			"spec": map[string]interface{}{
				"replicas": float64(3),
			},
		}

		mockClient := &mockGraphClient{
			queryResult: createMockQueryResult(previousResource),
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.False(t, configChanged, "configChanged should be false when generation unchanged")
		assert.False(t, statusChanged, "statusChanged should be false when no status field")
		assert.False(t, replicasChanged)
	})

	t.Run("spec added - configChanged=true", func(t *testing.T) {
		builder := NewGraphBuilder().(*graphBuilder)

		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(2),
			},
			"spec": map[string]interface{}{
				"replicas": float64(3),
			},
		}

		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(1),
			},
			// No spec field
		}

		mockClient := &mockGraphClient{
			queryResult: createMockQueryResult(previousResource),
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.True(t, configChanged, "configChanged should be true when spec is added")
		assert.False(t, statusChanged)
		assert.False(t, replicasChanged)
	})

	t.Run("spec removed - configChanged=true", func(t *testing.T) {
		builder := NewGraphBuilder().(*graphBuilder)

		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(2),
			},
			// No spec field
		}

		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(1),
			},
			"spec": map[string]interface{}{
				"replicas": float64(3),
			},
		}

		mockClient := &mockGraphClient{
			queryResult: createMockQueryResult(previousResource),
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.True(t, configChanged, "configChanged should be true when spec is removed")
		assert.False(t, statusChanged)
		assert.False(t, replicasChanged)
	})

	t.Run("no previous event - configChanged=false", func(t *testing.T) {
		builder := NewGraphBuilder().(*graphBuilder)

		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(1),
			},
			"spec": map[string]interface{}{
				"replicas": float64(3),
			},
		}

		// Empty query result (no previous event)
		mockClient := &mockGraphClient{
			queryResult: &graph.QueryResult{Rows: [][]interface{}{}},
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.False(t, configChanged, "configChanged should be false when no previous event exists")
		assert.False(t, statusChanged)
		assert.False(t, replicasChanged)
	})

	t.Run("nested spec changes detected", func(t *testing.T) {
		builder := NewGraphBuilder().(*graphBuilder)

		currentResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(3),
			},
			"spec": map[string]interface{}{
				"template": map[string]interface{}{
					"spec": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "app",
								"image": "myapp:v2",
								"env": []interface{}{
									map[string]interface{}{
										"name":  "LOG_LEVEL",
										"value": "debug",
									},
								},
							},
						},
					},
				},
			},
		}

		previousResource := map[string]interface{}{
			"metadata": map[string]interface{}{
				"generation": float64(2),
			},
			"spec": map[string]interface{}{
				"template": map[string]interface{}{
					"spec": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "app",
								"image": "myapp:v2",
								"env": []interface{}{
									map[string]interface{}{
										"name":  "LOG_LEVEL",
										"value": "info",
									},
								},
							},
						},
					},
				},
			},
		}

		mockClient := &mockGraphClient{
			queryResult: createMockQueryResult(previousResource),
		}
		builder.client = mockClient

		event := models.Event{
			Resource: models.ResourceMetadata{UID: "test-uid"},
		}

		configChanged, statusChanged, replicasChanged := builder.detectChanges(ctx, event, currentResource)

		assert.True(t, configChanged, "configChanged should be true when nested spec fields change")
		assert.False(t, statusChanged)
		assert.False(t, replicasChanged)
	})
}

func TestDeepEqual(t *testing.T) {
	tests := []struct {
		name     string
		a        interface{}
		b        interface{}
		expected bool
	}{
		{
			name:     "nil values",
			a:        nil,
			b:        nil,
			expected: true,
		},
		{
			name:     "one nil value",
			a:        nil,
			b:        "test",
			expected: false,
		},
		{
			name:     "equal strings",
			a:        "hello",
			b:        "hello",
			expected: true,
		},
		{
			name:     "different strings",
			a:        "hello",
			b:        "world",
			expected: false,
		},
		{
			name:     "equal numbers",
			a:        float64(42),
			b:        float64(42),
			expected: true,
		},
		{
			name:     "different numbers",
			a:        float64(42),
			b:        float64(43),
			expected: false,
		},
		{
			name:     "equal booleans",
			a:        true,
			b:        true,
			expected: true,
		},
		{
			name:     "different booleans",
			a:        true,
			b:        false,
			expected: false,
		},
		{
			name: "equal maps",
			a: map[string]interface{}{
				"key1": "value1",
				"key2": float64(42),
			},
			b: map[string]interface{}{
				"key1": "value1",
				"key2": float64(42),
			},
			expected: true,
		},
		{
			name: "different maps - different values",
			a: map[string]interface{}{
				"key1": "value1",
			},
			b: map[string]interface{}{
				"key1": "value2",
			},
			expected: false,
		},
		{
			name: "different maps - different keys",
			a: map[string]interface{}{
				"key1": "value1",
			},
			b: map[string]interface{}{
				"key2": "value1",
			},
			expected: false,
		},
		{
			name: "different maps - different sizes",
			a: map[string]interface{}{
				"key1": "value1",
			},
			b: map[string]interface{}{
				"key1": "value1",
				"key2": "value2",
			},
			expected: false,
		},
		{
			name: "equal nested maps",
			a: map[string]interface{}{
				"outer": map[string]interface{}{
					"inner": "value",
				},
			},
			b: map[string]interface{}{
				"outer": map[string]interface{}{
					"inner": "value",
				},
			},
			expected: true,
		},
		{
			name: "different nested maps",
			a: map[string]interface{}{
				"outer": map[string]interface{}{
					"inner": "value1",
				},
			},
			b: map[string]interface{}{
				"outer": map[string]interface{}{
					"inner": "value2",
				},
			},
			expected: false,
		},
		{
			name: "equal slices",
			a: []interface{}{
				"item1",
				float64(42),
				true,
			},
			b: []interface{}{
				"item1",
				float64(42),
				true,
			},
			expected: true,
		},
		{
			name: "different slices - different values",
			a: []interface{}{
				"item1",
				float64(42),
			},
			b: []interface{}{
				"item1",
				float64(43),
			},
			expected: false,
		},
		{
			name: "different slices - different lengths",
			a: []interface{}{
				"item1",
			},
			b: []interface{}{
				"item1",
				"item2",
			},
			expected: false,
		},
		{
			name: "complex nested structure - equal",
			a: map[string]interface{}{
				"spec": map[string]interface{}{
					"replicas": float64(3),
					"template": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "nginx",
								"image": "nginx:1.19",
							},
						},
					},
				},
			},
			b: map[string]interface{}{
				"spec": map[string]interface{}{
					"replicas": float64(3),
					"template": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "nginx",
								"image": "nginx:1.19",
							},
						},
					},
				},
			},
			expected: true,
		},
		{
			name: "complex nested structure - different",
			a: map[string]interface{}{
				"spec": map[string]interface{}{
					"replicas": float64(3),
					"template": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "nginx",
								"image": "nginx:1.19",
							},
						},
					},
				},
			},
			b: map[string]interface{}{
				"spec": map[string]interface{}{
					"replicas": float64(3),
					"template": map[string]interface{}{
						"containers": []interface{}{
							map[string]interface{}{
								"name":  "nginx",
								"image": "nginx:1.20", // Different image
							},
						},
					},
				},
			},
			expected: false,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			result := deepEqual(tt.a, tt.b)
			assert.Equal(t, tt.expected, result)
		})
	}
}

// Helper functions

func createPodJSON(name, phase string) json.RawMessage {
	data := map[string]interface{}{
		"metadata": map[string]interface{}{
			"name": name,
		},
		"status": map[string]interface{}{
			"phase": phase,
		},
	}
	jsonData, _ := json.Marshal(data)
